<!-- app/views/admin/users/index.html.erb -->
<h1>Список пользователей</h1>

<table>
  <thead>
  <tr>
    <th>Имя</th>
    <th>Почта</th>
    <th>Роль</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name || 'Без имени' %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to 'Редактировать', edit_admin_user_path(user), class: "btn btn-primary" %>
        <%= link_to 'Удалить', admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>
